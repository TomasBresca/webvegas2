        // Centro del premio relativo al contenedor del juego
        const prizeCenterX = prizeRect.left - gameRect.left + (prizeRect.width / 2);
        const distance = Math.abs(prizeCenterX - clawX);
        
        // Debug
        console.log(`Premio ${prize.id} en posici√≥n X: ${prizeCenterX}, distancia: ${distance}`);
        
        if (distance < closestDistance) {
