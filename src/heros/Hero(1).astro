    // Funci贸n para distribuir las cartas en forma de abanico
    function arrangeCardsInFan() {
      const totalCards = cards.length;
      const fanAngle = 30; // ngulo total del abanico en grados
      const angleStep = fanAngle / (totalCards - 1); // Distribuci贸n uniforme de 谩ngulos
      const fanRadius = 20; // Radio de curvatura del abanico
      
      cards.forEach((card, index) => {
        // Calcular 谩ngulo para cada carta relativo al centro
        const angle = -fanAngle/2 + (angleStep * index);
        
        // Calcular la posici贸n en semic铆rculo (abanico)
        const offsetX = Math.sin(angle * Math.PI / 180) * fanRadius;
        const offsetY = Math.cos(angle * Math.PI / 180) * fanRadius * 0.5;
        
        // ngulo de rotaci贸n para cada carta
        const rotateAngle = angle * 0.8; // 80% del 谩ngulo para que no sea tan extremo
        
        // Z-index para que las cartas se superpongan correctamente
        const zIndex = 10 + index;
        
        // Aplicar transformaciones
        if (card instanceof HTMLElement) {
          card.style.transform = `translate(calc(-50% + ${offsetX}px), calc(-50% + ${offsetY}px)) rotate(${rotateAngle}deg)`;
          card.style.zIndex = zIndex.toString();
          
          // Ajustar posici贸n de origen para un mejor efecto de abanico
          card.style.transformOrigin = `center bottom`;
          
          // Guardar el z-index para uso posterior
          card.setAttribute('data-z-index', zIndex.toString());
          card.setAttribute('data-original-rotate', rotateAngle.toString());
          
          // Desplazamiento horizontal para crear efecto de abanico
          const leftOffset = 50 + (index - 1) * 10; // Distribuci贸n uniforme en horizontal
          card.style.left = `${leftOffset}%`;
        }
        
        // A帽adir clase para animar la entrada de las cartas
        setTimeout(() => {
          card.classList.add('card-dealt');
        }, index * 200); // Escalonar la animaci贸n, m谩s r谩pido
      });
    }
    
