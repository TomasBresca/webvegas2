    function arrangeCardsInFan() {
      const totalCards = cards.length;
      const fanAngle = 30;
      const angleStep = fanAngle / (totalCards - 1);
      const fanRadius = 20;
      
      cards.forEach((card, index) => {
        const angle = -fanAngle/2 + (angleStep * index);
        const offsetX = Math.sin(angle * Math.PI / 180) * fanRadius;
        const offsetY = Math.cos(angle * Math.PI / 180) * fanRadius * 0.5;
        const rotateAngle = angle * 0.8;
        const zIndex = 10 + index;
        
        if (card instanceof HTMLElement) {
          card.setAttribute('data-offset-x', offsetX.toString());
          card.setAttribute('data-offset-y', offsetY.toString());
          card.setAttribute('data-rotate', rotateAngle.toString());
          
          card.style.transform = `translate(calc(-50% + ${offsetX}px), calc(-50% + ${offsetY}px)) rotate(${rotateAngle}deg)`;
          card.style.zIndex = zIndex.toString();
          card.style.transformOrigin = `center bottom`;
          card.setAttribute('data-z-index', zIndex.toString());
          
          const leftOffset = 50 + (index - 1) * 10;
          card.style.left = `${leftOffset}%`;
        }
        
        setTimeout(() => {
          card.classList.add('card-dealt');
          
          if (card instanceof HTMLElement) {
            const levitationClass = `card-levitation-${index + 1}`;
            card.classList.add(levitationClass);
            
            card.style.setProperty('--offset-x', `${offsetX}px`);
            card.style.setProperty('--offset-y', `${offsetY}px`);
            card.style.setProperty('--rotate', `${rotateAngle}deg`);
            card.style.setProperty('--left', `${leftOffset}%`);
          }
        }, index * 200);
      });
