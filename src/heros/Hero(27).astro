<style>
  .hero-container {
    position: relative;
    background-color: #000;
    width: 100%;
    height: 100vh;
    max-height: 100vh;
    overflow: hidden;
  }

  .fondo-icon {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .background-elements {
    position: absolute;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    z-index: 2;
    pointer-events: none;
    overflow: visible;
  }

  .diamantes-y-cerezas-icon {
    position: absolute;
    top: 0%;
    left: 0%;
    width: auto;
    height: 100vh;
    min-width: 120vw;
    object-fit: cover;
    animation: floatGently 6s ease-in-out infinite;
    z-index: 2;
  }

  .monedas-copia-icon {
    position: absolute;
    top: 0%;
    left: 0%;
    width: auto;
    height: 100vh;
    min-width: 120vw;
    object-fit: cover;
    animation: floatGently 6s ease-in-out infinite;
    animation-delay: 1s;
    z-index: 2;
  }

  .main-content {
    position: relative;
    z-index: 10;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1vh 5vw;
    box-sizing: border-box;
    gap: 1vh;
  }

  .central-elements {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 30vh;
  }

  .joker-y-celus-icon {
    width: 80vw;
    max-width: 600px;
    height: auto;
    object-fit: contain;
    animation: floatGently 6s ease-in-out infinite;
    animation-delay: 0.5s;
    z-index: 3;
  }

  .aca-vivis-la-mejor-experiencia-icon {
    position: absolute;
    bottom: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 50vw;
    max-width: 300px;
    height: auto;
    object-fit: contain;
    z-index: 10;
  }

  .button-section {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    position: relative;
    z-index: 15;
  }

  /* Botón de WhatsApp personalizado */
  .whatsapp-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    width: 80vw;
    height: 9vh;
    max-width: 427px;
    max-height: 73px;
    min-width: 240px;
    min-height: 50px;
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
    border-radius: 50px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    animation: pulse 2.5s ease-in-out infinite;
    filter: drop-shadow(0 0 15px rgba(37, 211, 102, 0.6));
    border: 2px solid rgba(255, 255, 255, 0.2);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .whatsapp-button:hover {
    transform: scale(1.08) translateY(-2px);
    animation-play-state: paused;
    filter: drop-shadow(0 0 25px rgba(37, 211, 102, 0.8));
    background: linear-gradient(135deg, #2ee673 0%, #15a085 100%);
  }

  .whatsapp-icon {
    width: 24px;
    height: 24px;
    color: white;
    flex-shrink: 0;
  }

  .whatsapp-icon svg {
    width: 100%;
    height: 100%;
  }

  .whatsapp-text {
    color: white;
    font-weight: bold;
    font-size: clamp(18px, 5vw, 24px);
    font-family: 'Arial', sans-serif;
    letter-spacing: 0.5px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    white-space: nowrap;
  }

  .logo-section {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .logo-vegas-icon {
    width: 60vw;
    max-width: 280px;
    height: auto;
    object-fit: contain;
  }

  /* Animaciones */
  @keyframes floatGently {
    0%, 100% { 
      transform: translateY(0) rotate(0deg); 
    }
    50% { 
      transform: translateY(-15px) rotate(2deg); 
    }
  }

  @keyframes pulse-glow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.7; }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.02);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-content {
      padding: 0.5vh 3vw;
      gap: 0.5vh;
    }

    .central-elements {
      height: 25vh;
    }

    .joker-y-celus-icon {
      width: 85vw;
      max-width: 500px;
    }

    .aca-vivis-la-mejor-experiencia-icon {
      width: 70vw;
      max-width: 320px;
      bottom: 12%;
    }

    .whatsapp-button {
      width: 85vw;
      height: 8vh;
      min-width: 200px;
      min-height: 45px;
      gap: 8px;
    }

    .whatsapp-icon {
      width: 20px;
      height: 20px;
    }

    .logo-vegas-icon {
      width: 65vw;
    }

    .diamantes-y-cerezas-icon,
    .monedas-copia-icon {
      height: 100vh;
      min-width: 120vw;
    }
  }

  @media (max-width: 480px) {
    .main-content {
      padding: 0.5vh 2vw;
      gap: 0.5vh;
    }

    .central-elements {
      height: 20vh;
    }

    .joker-y-celus-icon {
      width: 90vw;
      max-width: 450px;
    }

    .aca-vivis-la-mejor-experiencia-icon {
      width: 80vw;
      max-width: 320px;
      bottom: 5%;
    }

    .whatsapp-button {
      width: 90vw;
      height: 7vh;
      min-width: 180px;
      min-height: 40px;
      gap: 6px;
    }

    .whatsapp-icon {
      width: 18px;
      height: 18px;
    }

    .logo-vegas-icon {
      width: 70vw;
    }

    .diamantes-y-cerezas-icon,
    .monedas-copia-icon {
      height: 100vh;
      min-width: 120vw;
    }
  }

  /* Utility classes */
  .hidden {
    display: none !important;
  }

  .flex {
    display: flex;
  }

  .items-center {
    align-items: center;
  }

  .justify-center {
    justify-content: center;
  }

  .gap-2 {
    gap: 0.5rem;
  }

  .bg-green-600 {
    background-color: #059669;
  }

  .hover\:bg-green-700:hover {
    background-color: #047857;
  }

  .text-white {
    color: white;
  }

  .font-bold {
    font-weight: bold;
  }

  .py-3 {
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
  }

  .px-4 {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .rounded-lg {
    border-radius: 0.5rem;
  }

  .transition-all {
    transition: all 0.3s ease;
  }

  .hover\:scale-105:hover {
    transform: scale(1.05);
  }

  .shadow-lg {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .h-6 {
    height: 1.5rem;
  }

  .w-6 {
    width: 1.5rem;
  }

  .inline {
    display: inline;
  }
</style>

<script>
  // Cuenta regresiva de 15 minutos
  let totalSeconds = 15 * 60;
  const minutesElement = document.getElementById('minutes');
  const secondsElement = document.getElementById('seconds');
  
  function updateTimer() {
    const minutes = Math.floor(totalSeconds / 60);
    const seconds = totalSeconds % 60;
    
    if (minutesElement) {
      minutesElement.textContent = minutes.toString().padStart(2, '0');
    }
    
    if (secondsElement) {
      secondsElement.textContent = seconds.toString().padStart(2, '0');
    }
    
    if (totalSeconds > 0) {
      totalSeconds--;
      setTimeout(updateTimer, 1000);
    } else {
      // Opcional: redirigir o mostrar mensaje cuando termine la cuenta regresiva
      const countdownContainer = document.querySelector('.countdown-container');
      if (countdownContainer) {
        countdownContainer.innerHTML = 
          '<div class="text-center w-full"><span class="text-white font-bold text-lg">¡BONO EXPIRADO!</span></div>';
      }
    }
  }
  
  // Iniciar la cuenta regresiva cuando se carga la página
  window.addEventListener('load', updateTimer);
</script>

<script define:vars={{ pixelEvent }}>
  document.addEventListener('DOMContentLoaded', () => {
    // Para depuración
    console.log('Pixel event disponible:', pixelEvent);
    
    // Obtener los botones
    const whatsappBtn1 = document.getElementById('whatsapp-btn-1');
    const whatsappBtn2 = document.getElementById('whatsapp-btn-2');
    
    // Función para manejar el clic y enviar evento de Pixel
    const handleButtonClick = (e, btnElement) => {
      e.preventDefault();
      
      // Usar una variable local para el evento
      const eventToTrack = pixelEvent || 'Lead';
      
      // Imprimir para depuración
      console.log('Tracking event:', eventToTrack);
      
      // Enviar el evento si fbq está disponible
      if (typeof fbq === 'function') {
        fbq('track', eventToTrack);
      }
      
      // Navegar después de un pequeño retraso
      setTimeout(() => {
        window.location.href = btnElement.href;
      }, 300);
    };
    
    // Agregar event listeners a ambos botones
    if (whatsappBtn1) {
      whatsappBtn1.addEventListener('click', (e) => handleButtonClick(e, whatsappBtn1));
    }
    
    if (whatsappBtn2) {
      whatsappBtn2.addEventListener('click', (e) => handleButtonClick(e, whatsappBtn2));
    }
  });
</script>