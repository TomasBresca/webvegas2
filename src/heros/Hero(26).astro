<style>
body {
  margin: 0;
  line-height: normal;
  overflow-x: hidden;
}

/* Animaciones de flotación */
@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-8px);
  }
}

@keyframes floatSlow {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-6px);
  }
}

@keyframes floatGentle {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-4px);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

:root {
  --color-white: #fff;
}

.hero-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  max-height: 100vh;
  background-color: var(--color-white);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow-x: hidden;
  overflow-y: hidden;
}

.fondo-icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}

.content-wrapper {
  position: relative;
  width: 100%;
  max-width: 430px;
  height: 100vh;
  max-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  z-index: 3;
  padding: 2vh 3vw;
  box-sizing: border-box;
  overflow: visible;
  gap: 1vh;
}

/* Header Section */
.header-section {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 1vh;
  flex-shrink: 0;
  overflow: visible;
  position: relative;
  z-index: 10;
}

.jokercabeza-left {
  position: absolute;
  left: 0;
  width: 12vw;
  height: 10vh;
  max-width: 60px;
  max-height: 80px;
  min-width: 40px;
  min-height: 50px;
  object-fit: contain;
  animation: float 3s ease-in-out infinite;
  animation-delay: 0.5s;
}

.jokercabeza-right {
  position: absolute;
  right: 0;
  width: 12vw;
  height: 10vh;
  max-width: 60px;
  max-height: 80px;
  min-width: 40px;
  min-height: 50px;
  object-fit: contain;
  animation: float 3s ease-in-out infinite;
  animation-delay: 1s;
}

.logo-vegas {
  width: 45vw;
  height: 8vh;
  max-width: 220px;
  max-height: 60px;
  min-width: 100px;
  min-height: 20px;
  object-fit: contain;
  animation: floatGentle 4s ease-in-out infinite;
}

/* Badges Section */
.badges-section {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  flex-shrink: 0;
  overflow: visible;
  padding: 0 10px;
  gap: 8vw;
  z-index: 10;
  position: relative;
}

.juegos-badge {
  width: 28vw;
  height: 12vh;
  max-width: 140px;
  max-height: 100px;
  min-width: 80px;
  min-height: 60px;
  object-fit: contain;
  animation: floatSlow 3.5s ease-in-out infinite;
  animation-delay: 0.2s;
}

.hs-abierto-badge {
  width: 32vw;
  height: 13vh;
  max-width: 160px;
  max-height: 110px;
  min-width: 80px;
  min-height: 60px;
  object-fit: contain;
  animation: floatSlow 3.5s ease-in-out infinite;
  animation-delay: 0.8s;
}

/* Main Image Section */
.main-image-section {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  flex: 1;
  min-height: 0;
}

.celular-chica {
  width: 100vw;
  height: 75vh;
  max-width: 600px;
  max-height: 780px;
  min-width: 400px;
  min-height: 520px;
  object-fit: contain;
  animation: floatGentle 4.5s ease-in-out infinite;
  animation-delay: 0.3s;
  margin-top: 5vh;
  z-index: 2;
}

/* Side Texts Section */
.side-texts-section {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: relative;
  z-index: 10;
  flex-shrink: 0;
  overflow: visible;
  gap: 6vw;
}

.lo-que-buscabas {
  width: 35vw;
  height: 11vh;
  max-width: 170px;
  max-height: 96px;
  min-width: 80px;
  min-height: 60px;
  object-fit: contain;
  animation: float 3.2s ease-in-out infinite;
  animation-delay: 0.4s;
}

.todo-al-instante {
  width: 32vw;
  height: 11vh;
  max-width: 150px;
  max-height: 96px;
  min-width: 80px;
  min-height: 60px;
  object-fit: contain;
  animation: float 3.2s ease-in-out infinite;
  animation-delay: 0.9s;
}



/* Bottom Section */
.bottom-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: relative;
  z-index: 10;
  flex-shrink: 0;
  margin-bottom: 2vh;
}

.te-esperamos {
  width: 70vw;
  height: 8vh;
  max-width: 320px;
  max-height: 60px;
  min-width: 150px;
  min-height: 30px;
  object-fit: contain;
  margin-bottom: 2vh;
  animation: floatGentle 3.8s ease-in-out infinite;
  animation-delay: 0.6s;
}

/* WhatsApp Section */
.whatsapp-section {
  display: flex;
  justify-content: center;
  width: 100%;
  overflow: visible;
}

/* Botón de WhatsApp personalizado */
.whatsapp-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  width: 75vw;
  height: 9vh;
  max-width: 340px;
  max-height: 73px;
  min-width: 240px;
  min-height: 50px;
  background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
  border-radius: 50px;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.3s ease;
  animation: pulse 2.5s ease-in-out infinite;
  filter: drop-shadow(0 0 15px rgba(37, 211, 102, 0.6));
  border: 2px solid rgba(255, 255, 255, 0.2);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.whatsapp-button:hover {
  transform: scale(1.08) translateY(-2px);
  animation-play-state: paused;
  filter: drop-shadow(0 0 25px rgba(37, 211, 102, 0.8));
  background: linear-gradient(135deg, #2ee673 0%, #15a085 100%);
}

.whatsapp-icon {
  width: 24px;
  height: 24px;
  color: white;
  flex-shrink: 0;
}

.whatsapp-icon svg {
  width: 100%;
  height: 100%;
}

.whatsapp-text {
  color: white;
  font-weight: bold;
  font-size: clamp(18px, 5vw, 24px);
  font-family: 'Arial', sans-serif;
  letter-spacing: 0.5px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  white-space: nowrap;
}

/* Responsive adjustments para pantallas muy pequeñas */
@media (max-width: 320px) {
  .content-wrapper {
    padding: 1vh 2vw;
    gap: 0.5vh;
  }
  
  .header-section {
    margin-top: 0.5vh;
  }
  
  .jokercabeza-left,
  .jokercabeza-right {
    width: 10vw;
    height: 8vh;
  }
  
  .logo-vegas {
    width: 40vw;
    height: 6vh;
  }
  
  .badges-section {
    gap: 6vw;
  }
  
  .juegos-badge,
  .hs-abierto-badge {
    width: 25vw;
    height: 10vh;
  }
  
  .celular-chica {
    width: 100vw;
    height: 80vh;
    margin-top: 4vh;
  }
  
  .side-texts-section {
    gap: 4vw;
  }
  
  .lo-que-buscabas,
  .todo-al-instante {
    width: 30vw;
    height: 9vh;
  }
  
  .whatsapp-button {
    min-width: 200px;
    min-height: 45px;
    gap: 8px;
  }
  
  .whatsapp-icon {
    width: 20px;
    height: 20px;
  }
}

/* Ajustes para pantallas muy altas */
@media (min-height: 800px) {
  .main-image-section {
    flex: 1.2;
  }
  
  .celular-chica {
    height: 85vh;
    margin-top: 3vh;
  }
}
</style>

<script>
  // Cuenta regresiva de 15 minutos
  let totalSeconds = 15 * 60;
  const minutesElement = document.getElementById('minutes');
  const secondsElement = document.getElementById('seconds');
  
  function updateTimer() {
    const minutes = Math.floor(totalSeconds / 60);
    const seconds = totalSeconds % 60;
    
    if (minutesElement) {
      minutesElement.textContent = minutes.toString().padStart(2, '0');
    }
    
    if (secondsElement) {
      secondsElement.textContent = seconds.toString().padStart(2, '0');
    }
    
    if (totalSeconds > 0) {
      totalSeconds--;
      setTimeout(updateTimer, 1000);
    } else {
      // Opcional: redirigir o mostrar mensaje cuando termine la cuenta regresiva
      const countdownContainer = document.querySelector('.countdown-container');
      if (countdownContainer) {
        countdownContainer.innerHTML = 
          '<div class="text-center w-full"><span class="text-white font-bold text-lg">¡BONO EXPIRADO!</span></div>';
      }
    }
  }
  
  // Iniciar la cuenta regresiva cuando se carga la página
  window.addEventListener('load', updateTimer);
</script>

