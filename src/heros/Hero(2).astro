          rouletteContainer.classList.remove('spinning');
        }
        if (spinButton) {
          spinButton.classList.remove('hidden-button');
        }
      }, 1000);
    }
    
    // Función para girar la ruleta
    function spinWheel() {
      if (isSpinning) return;
      
      isSpinning = true;
      
      // Ocultar botón y agrandar la ruleta
      spinButton.classList.add('hidden-button');
      rouletteContainer.classList.add('spinning');
      
      // Sonido de ruleta (opcional)
      playSpinSound();
      
      // Generar un ángulo aleatorio (entre 5 y 10 vueltas completas)
      const minSpins = 5;
      const maxSpins = 10;
      const spinCount = minSpins + Math.random() * (maxSpins - minSpins);
      const spinAngle = spinCount * 360;
      
      // Decidir qué segmento ganará (0-7 para los 8 segmentos)
      const segments = document.querySelectorAll('.segment');
      const winningIndex = Math.floor(Math.random() * segments.length);
      
      // Calcular el ángulo final para que el segmento elegido quede en la parte superior
      // Cada segmento es de 45 grados (360/8)
      const segmentAngle = 45;
      const segmentOffset = 22.5; // La mitad del ángulo del segmento para centrar
      const finalAngle = spinAngle + (winningIndex * segmentAngle) + segmentOffset;
      
      // Aplicar la animación de giro
      if (wheel) {
        wheel.style.transition = `transform 5s cubic-bezier(0.32, 0.94, 0.6, 1)`;
        wheel.style.transform = `rotate(${finalAngle}deg)`;
        
        // Obtener el bono ganador
        const winningSegment = segments[winningIndex];
        const cardName = winningSegment.getAttribute('data-card-name');
        
        // Esperar a que termine la animación
        setTimeout(() => {
          // Mostrar el modal con el bono
          if (cardName) {
            showBonusModal(cardName);
          }
          
          // Resetear para el próximo giro
          isSpinning = false;
        }, 5500); // Un poco más que la duración de la animación
      }
    }
    
    // Evento de clic en el botón de girar
    if (spinButton) {
      spinButton.addEventListener('click', spinWheel);
    }
    
    // Función para reproducir sonido de giro (opcional)
    function playSpinSound() {
      // Implementación del sonido si se desea
    }
    
    // Añadir un efecto de resplandor al botón de girar
    function pulseSpinButton() {
      if (spinButton && !isSpinning) {
        spinButton.classList.add('scale-105');
        setTimeout(() => {
          if (spinButton) spinButton.classList.remove('scale-105');
        }, 800);
      }
    }
    
    // Pulsar el botón periódicamente para atraer la atención
    setInterval(pulseSpinButton, 3000);
  });
