    <img src="/Hero(35)/gold_coin.png" alt="Moneda de Oro" class="gold_coin" /> 
    <img src="/Hero(35)/gold_coin.png" alt="Moneda de Oro" class="gold_coin" /> 
    <img src="/Hero(35)/gold_coin.png" alt="Moneda de Oro" class="gold_coin" /> 
    <img src="/Hero(35)/gold_coin.png" alt="Moneda de Oro" class="gold_coin" /> 
  </div>
  
  <!-- Pilas de oro posicionadas en esquinas inferiores -->
  <img src="/Hero(35)/gold_pile_bottom_right.png" alt="Pila de Oro" class="gold_pile gold_pile_left" /> 
  <img src="/Hero(35)/gold_pile_bottom_right.png" alt="Pila de Oro" class="gold_pile gold_pile_right" /> 
  <!-- Personaje centrado usando flexbox -->
  <img src="/Hero(35)/character.png" alt="Personaje" class="character" /> 

