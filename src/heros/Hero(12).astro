<script define:vars={{ pixelEvent }}>
  document.addEventListener('DOMContentLoaded', () => {
    const easterNest = document.getElementById('easter-nest');
    const bonusModal = document.getElementById('bonus-modal');
    const modalCard = document.querySelector('.modal-card');
    const closeModalBtn = document.getElementById('close-modal');
    const mainWhatsappLink = document.querySelector('#modal-cta')?.getAttribute('href') || '';
    const sunburstEffect = document.querySelector('.sunburst-effect');
    let selectionMade = false;
    let clickCount = 0;

    console.log('Pixel event disponible:', pixelEvent);
    
    const topWhatsappButton = document.getElementById('whatsapp-top-button');
    if (topWhatsappButton) {
      topWhatsappButton.addEventListener('click', (e) => {
        e.preventDefault();
        const eventToTrack = pixelEvent || 'Lead';
        console.log('Tracking event desde bot√≥n superior:', eventToTrack);
        
        if (typeof fbq === 'function') {
          fbq('track', eventToTrack);
        }
        
        setTimeout(() => {
          window.open(topWhatsappButton.href, '_blank');
        }, 300);
      });
    }
    
    const ctaButton = document.getElementById('modal-cta');
    
    if (ctaButton) {
      ctaButton.addEventListener('click', (e) => {
        e.preventDefault();
        const eventToTrack = pixelEvent || 'Lead';
        console.log('Tracking event:', eventToTrack);
        
        if (typeof fbq === 'function') {
          fbq('track', eventToTrack);
        }
        
        setTimeout(() => {
          window.location.href = ctaButton.href;
        }, 300);
      });
    }
    
    const bonusData = {
      'default': {
        name: '10% BONO',
        icon: 'ü•ö',
        subtitle: '¬°Felicidades has ganado tu bono!',
        description: 'Hablanos al whatsapp pulsando el boton y crea tu usuario al instante',
        features: [
          'V√°lido para cualquier monto de carga',
          'Sin requisitos adicionales',
          'Act√≠valo inmediatamente al crear tu usuario'
        ],
        ctaLink: ''
      }
    };
    
    function playCrackSound() {
      console.log("Sonido de crackeo...");
    }

    // Funci√≥n para actualizar el efecto de destello
    function updateSunburstEffect(clicksCount) {
      if (!sunburstEffect) return;
      
      // Activar y aumentar la intensidad del efecto de destello
      sunburstEffect.classList.add('active');
      
      // Ajustar la intensidad seg√∫n el n√∫mero de clics
      sunburstEffect.classList.remove('intensity-1', 'intensity-2', 'intensity-3');
      sunburstEffect.classList.add(`intensity-${clicksCount}`);
      
      // Reiniciar la animaci√≥n para que sea m√°s evidente
      sunburstEffect.style.animation = 'none';
      setTimeout(() => {
        sunburstEffect.style.animation = '';
      }, 10);
    }
    
    function showBonusModal() {
      const bonus = bonusData['default'];
      
      const bonusNameElement = document.querySelector('.bonus-name');
      if (bonusNameElement) bonusNameElement.textContent = bonus.name;
      
      const modalIcon = document.getElementById('modal-icon');
      const modalSubtitle = document.getElementById('modal-subtitle');
      const modalDescription = document.getElementById('modal-description');
      const feature1 = document.getElementById('feature-1');
      const feature2 = document.getElementById('feature-2');
      const feature3 = document.getElementById('feature-3');
      
      if (modalIcon) modalIcon.textContent = bonus.icon;
      if (modalSubtitle) modalSubtitle.textContent = bonus.subtitle;
      if (modalDescription) modalDescription.textContent = bonus.description;
      if (feature1) feature1.textContent = bonus.features[0];
      if (feature2) feature2.textContent = bonus.features[1];
      if (feature3) feature3.textContent = bonus.features[2];
      
      const ctaButton = document.getElementById('modal-cta');
      if (ctaButton) {
        ctaButton.href = mainWhatsappLink;
      }
      
      if (bonusModal) {
        bonusModal.classList.remove('opacity-0', 'pointer-events-none');
        setTimeout(() => {
          if (modalCard) modalCard.classList.add('scale-100');
        }, 100);
      }
    }
    
    function closeModal() {
      if (modalCard) modalCard.classList.remove('scale-100');
      
      setTimeout(() => {
        if (bonusModal) bonusModal.classList.add('opacity-0', 'pointer-events-none');
      }, 300);
    }
    
    if (easterNest) {
      easterNest.addEventListener('click', () => {
        if (selectionMade) return;
        
        clickCount++;
        console.log(`Click en el huevo: ${clickCount}/3`);
        
        easterNest.setAttribute('data-clicks', clickCount.toString());
        
        playCrackSound();
        
        // Actualizar efecto visual con cada clic
        updateSunburstEffect(clickCount);
        
        // Actualizar estado visual del huevo
        updateEggState(clickCount);
        
        if (clickCount >= 3) {
          selectionMade = true;
          
          setTimeout(() => {
            showBonusModal();
          }, 800);
        }
      });
      
      easterNest.addEventListener('mouseenter', () => {
        if (!selectionMade) {
          easterNest.classList.add('easter-nest-hover');
        }
      });
      
      easterNest.addEventListener('mouseleave', () => {
        if (!selectionMade) {
          easterNest.classList.remove('easter-nest-hover');
        }
      });
    }
    
    function updateEggState(clicksCount) {
      const eggStates = document.querySelectorAll('.egg-state');
      eggStates.forEach(state => {
        state.classList.remove('active');
      });
      
      const newState = document.querySelector(`.egg-state-${Math.min(clicksCount, 3)}`);
      if (newState) {
        newState.classList.add('active');
      }
      
      if (clicksCount < 3) {
        easterNest.classList.add('egg-shake');
        setTimeout(() => {
          easterNest.classList.remove('egg-shake');
        }, 500);
      } else {
        easterNest.classList.add('egg-break');
      }
    }
    
    if (closeModalBtn) {
      closeModalBtn.addEventListener('click', closeModal);
    }
  });
</script>

<style>
  /* Textura de fondo de mesa de casino */
  .bg-felt-pattern {
    background-image: 
      radial-gradient(circle, rgba(25, 17, 45, 0.6) 1px, transparent 1px),
      radial-gradient(circle, rgba(25, 17, 45, 0.6) 1px, transparent 1px);
    background-size: 20px 20px;
    background-position: 0 0, 10px 10px;
  }

  /* Patr√≥n de puntos para fondo unificado */
  .bg-dots-pattern {
    background-image: 
      radial-gradient(circle, rgba(255, 208, 112, 0.15) 1px, transparent 1px);
    background-size: 30px 30px;
  }
  
  .gradient-text {
    background-image: linear-gradient(45deg, #FFD700, #FFB627);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
    position: relative;
  }
  
  .gradient-text::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 100%;
    height: 3px;
    background-image: linear-gradient(45deg, #FFD700, #FFB627);
    border-radius: 2px;
  }
  
  .hero-title {
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    letter-spacing: 0.05em;
  }
  
  /* Estilos para el nido y huevo de pascua */
  .easter-container {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  
  .easter-nest {
    width: 90vw;
    max-width: 450px;
    height: auto;
    aspect-ratio: 1/1;
    cursor: pointer;
    perspective: 1000px;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    will-change: transform;
    animation: float 3s infinite alternate ease-in-out;
    box-shadow: none;
    margin-top: 40px;
    position: relative;
  }
  
  /* Efecto de sunburst detr√°s del huevo */
  .sunburst-effect {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 120%;
  background-image: repeating-conic-gradient(
    from 0deg,
    rgba(255, 130, 50, 0.7) 0deg 10deg,
    rgba(255, 160, 80, 0.7) 10deg 20deg
  );
  border-radius: 50%;
  opacity: 0;
  z-index: 0;
  transition: opacity 0.5s ease, transform 0.5s ease;
  transform-origin: center;
  animation: rotate-sunburst 20s linear infinite;
  pointer-events: none;
  mask-image: radial-gradient(circle, black 20%, transparent 70%);
  -webkit-mask-image: radial-gradient(circle, black 20%, transparent 70%);
}
  
  .sunburst-effect.active {
    opacity: 0.6;
  }
  
  .sunburst-effect.intensity-1 {
    transform: translate(-50%, -50%) scale(1.1);
    filter: blur(3px) brightness(1.2);
  }
  
  .sunburst-effect.intensity-2 {
    transform: translate(-50%, -50%) scale(1.3);
    filter: blur(2px) brightness(1.4);
    opacity: 0.7;
