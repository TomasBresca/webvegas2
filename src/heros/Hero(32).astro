---
const { whatsappLink1,  pixelEvent } = Astro.props;
import '../styles/global.css';
---
<section class="hero-container">
  <!-- Background elements -->
  <div class="background-elements">
    <img class="fondo-icon" alt="" src="/Hero(32)/fondo.png" />
    <img class="brillo-center-icon" alt="" src="/Hero(32)/brillo_center.png" />
    <img class="degradado-icon" alt="" src="/Hero(32)/degradado.png" />
  </div>
  
  <!-- Floating elements with fixed 100vh height -->
  <div class="floating-elements">
    <div class="floating-wrapper">
      <img class="emojisjoker-icon" alt="" src="/Hero(32)/emojisjoker.png" />
      <img class="fichasdoradas-icon" alt="" src="/Hero(32)/fichasdoradas.png" />
    </div>
  </div>
  
  <!-- Woman photo positioned at bottom but extending upward -->
  <div class="woman-container">
    <img class="mujer-y-celulares-icon" alt="" src="/Hero(32)/mujer_y_celulares.png" />
  </div>
  
  <!-- Main content container with flex layout -->
  <div class="content-container">
    <div class="top-content">
      <img class="teextranamos-icon" alt="" src="/Hero(32)/teextranamos.png" />
      
      <a href={whatsappLink1} id="whatsapp-btn-1" class="whatsapp-button">
        <img class="boton-whatsapp-icon" alt="Pedinos tu cuenta" src="/Hero(32)/boton_whatsapp.png" />
        <div class="whatsapp-glow"></div>
      </a>
    </div>
    
    <div class="bottom-content">
      <img class="superwin-icon" alt="" src="/Hero(32)/superwin.png" />
    </div>
    <div class="logovegas-icon-container">
      <img class="logovegas-icon" alt="" src="/Hero(32)/logovegas.png" />
    </div>

  </div>
</section>

<style>
  .hero-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .background-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 2;
    pointer-events: none;
    overflow: visible;
  }

  .floating-wrapper {
    position: relative;
    width: 100%;
    height: 100vh;
  }

  /* Reordered to put woman container before content container in the DOM */
  .woman-container {
    position: absolute;
    bottom: 0; /* Ensure flush with bottom */
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 80vh; /* Dramatically increased to reach the WhatsApp button */
    display: flex;
    justify-content: center;
    align-items: flex-end; /* Align to bottom */
    z-index: 5;
    overflow: visible; /* Allow image to overflow as needed */
    /* Animación de entrada suave para la mujer */
    animation: slideUpFadeHero32 1.5s ease-out 0.5s both;
  }

  .mujer-y-celulares-icon {
    height: 80vh; /* Matching container height */
    width: auto;
    max-width: none;
    object-fit: contain;
    object-position: bottom; /* Anchor to bottom */
    margin-bottom: 0; /* Ensure no space at bottom */
  }

  .content-container {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    z-index: 10; /* Higher z-index to ensure content appears above the woman */
    box-sizing: border-box;
  }

  .top-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 18vh; /* Keep as is to maintain top spacing */
    position: relative;
    z-index: 15; /* Ensure visibility above woman image */
  }

  .bottom-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 2vh;
    margin-bottom: 20vh; /* Reduced to work with the larger woman image */
    position: relative;
    z-index: 15; /* Ensure visibility above woman image */
  }

  .fondo-icon {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* Sutil animación de zoom para el fondo */
    animation: subtleZoomHero32 20s ease-in-out infinite alternate;
  }

  .brillo-center-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    min-width: 100%;
    min-height: 100%;
    object-fit: cover;
    /* Animación de pulso y rotación muy suave para el brillo central */
    animation: pulseGlowHero32 4s ease-in-out infinite, rotateSlowlyHero32 30s linear infinite;
  }

  .degradado-icon {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    object-fit: cover;
    z-index: 3; /* Above background but below content */
    /* Animación sutil de ondas */
    animation: waveEffectHero32 8s ease-in-out infinite;
  }

  .emojisjoker-icon {
    position: absolute;
    width: 100%;
    height: 100vh;
    object-fit: contain;
    top: 0;
    left: 0;
    /* Animación flotante con movimiento orbital */
    animation: floatOrbitHero32 3s ease-in-out infinite, fadeInScaleHero32 1s ease-out 0.3s both;
  }

  .fichasdoradas-icon {
    position: absolute;
    width: 100%;
    height: 100vh;
    object-fit: contain;
    top: 0;
    left: 0;
    /* Animación flotante en dirección opuesta con rotación */
    animation: floatOrbitReverseHero32 3s ease-in-out infinite, fadeInScaleHero32 1s ease-out 0.6s both, sparkleRotateHero32 2s linear infinite;
  }

  .teextranamos-icon {
    width: auto;
    max-width: 80%;
    height: auto;
    max-height: 15vh;
    object-fit: contain;
    margin-bottom: 2vh;
    /* Animación de entrada dramática */
    animation: bounceInDownHero32 1.2s ease-out 0.2s both;
  }

  .whatsapp-button {
    display: block;
    text-decoration: none;
    cursor: pointer;
    width: auto;
    max-width: 80%;
    position: relative;
    z-index: 20; /* Highest z-index to ensure button is always clickable */
    /* Animación de entrada espectacular */
    animation: heroEntranceHero32 1.5s ease-out 1s both;
  }

  .boton-whatsapp-icon {
    width: 100%;
    height: auto;
    object-fit: contain;
    transition: all 0.3s ease;
    /* Combinación de múltiples animaciones para máximo impacto */
    animation: 
      floatIntenseHero32 2s ease-in-out infinite,
      pulseButtonHero32 3s ease-in-out infinite,
      shineHero32 4s ease-in-out infinite;
    /* Efecto de sombra dramática */
    filter: drop-shadow(0 8px 25px rgba(37, 211, 102, 0.4));
  }

  /* Elemento de brillo adicional para el botón de WhatsApp */
  .whatsapp-glow {
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: radial-gradient(circle, rgba(37, 211, 102, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    z-index: -1;
    animation: glowPulseHero32 2s ease-in-out infinite alternate;
  }

  .whatsapp-button:hover .boton-whatsapp-icon {
    transform: scale(1.1) rotate(5deg);
    filter: drop-shadow(0 12px 35px rgba(37, 211, 102, 0.6)) saturate(1.2);
  }

  .whatsapp-button:hover .whatsapp-glow {
    animation: glowPulseIntenseHero32 0.5s ease-in-out infinite alternate;
  }

  .superwin-icon {
    width: auto;
    max-width: 80%;
    height: auto;
    max-height: 15vh;
    object-fit: contain;
    margin-bottom: 2vh;
    /* Animación de entrada desde abajo */
    animation: slideUpBounceHero32 1s ease-out 1.2s both;
  }

  .logovegas-icon-container {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2vh; /* Space above the logo */
  }

  .logovegas-icon {
    position: absolute;
    bottom: 0;
    width: auto;
    max-width: 70%;
    height: auto;
    max-height: 10vh;
    object-fit: contain;
    /* Animación sutil de aparición */
    animation: fadeInUpHero32 1s ease-out 1.5s both;
  }

  /* === DEFINICIÓN DE ANIMACIONES === */

  /* Animación principal del botón WhatsApp - flotación intensa */
  @keyframes floatIntenseHero32 {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-8px) rotate(1deg);
    }
    50% {
      transform: translateY(-12px) rotate(0deg);
    }
    75% {
      transform: translateY(-6px) rotate(-1deg);
    }
  }

  /* Pulso del botón para llamar la atención */
  @keyframes pulseButtonHero32 {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  /* Efecto de brillo que atraviesa el botón */
  @keyframes shineHero32 {
    0% {
      background-position: -100% 0;
    }
    100% {
      background-position: 100% 0;
    }
  }

  /* Brillo del aura del botón */
  @keyframes glowPulseHero32 {
    0% {
      opacity: 0.5;
      transform: scale(0.9);
    }
    100% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }

  /* Brillo intenso en hover */
  @keyframes glowPulseIntenseHero32 {
    0% {
      opacity: 0.8;
      transform: scale(1.1);
    }
    100% {
      opacity: 1;
      transform: scale(1.3);
    }
  }

  /* Entrada heroica del botón */
  @keyframes heroEntranceHero32 {
    0% {
      opacity: 0;
      transform: scale(0.3) translateY(-50px) rotate(-10deg);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1) translateY(-10px) rotate(5deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0) rotate(0deg);
    }
  }

  /* Animaciones para elementos de contenido */
  @keyframes bounceInDownHero32 {
    0% {
      opacity: 0;
      transform: translateY(-60px) scale(0.8);
    }
    60% {
      opacity: 1;
      transform: translateY(10px) scale(1.1);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes slideUpBounceHero32 {
    0% {
      opacity: 0;
      transform: translateY(50px) scale(0.9);
    }
    70% {
      opacity: 1;
      transform: translateY(-10px) scale(1.05);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes fadeInUpHero32 {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUpFadeHero32 {
    0% {
      opacity: 0;
      transform: translateX(-50%) translateY(50px);
    }
    100% {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  @keyframes fadeInScaleHero32 {
    0% {
      opacity: 0;
      transform: scale(0.8);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Animaciones para elementos flotantes */
  @keyframes floatOrbitHero32 {
    0%, 100% {
      transform: translateX(0) translateY(0) rotate(0deg);
    }
    25% {
      transform: translateX(10px) translateY(-15px) rotate(2deg);
    }
    50% {
      transform: translateX(-5px) translateY(-20px) rotate(0deg);
    }
    75% {
      transform: translateX(-10px) translateY(-10px) rotate(-2deg);
    }
  }

  @keyframes floatOrbitReverseHero32 {
    0%, 100% {
      transform: translateX(0) translateY(0) rotate(0deg);
    }
    25% {
      transform: translateX(-8px) translateY(-12px) rotate(-1deg);
    }
    50% {
      transform: translateX(5px) translateY(-18px) rotate(1deg);
    }
    75% {
      transform: translateX(12px) translateY(-8px) rotate(2deg);
    }
  }

  @keyframes sparkleRotateHero32 {
    0% {
      filter: hue-rotate(0deg) brightness(1);
    }
    50% {
      filter: hue-rotate(30deg) brightness(1.1);
    }
    100% {
      filter: hue-rotate(0deg) brightness(1);
    }
  }

  /* Animaciones para elementos de fondo */
  @keyframes subtleZoomHero32 {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.03);
    }
  }

  @keyframes pulseGlowHero32 {
    0%, 100% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1.02);
    }
  }

  @keyframes rotateSlowlyHero32 {
    0% {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    100% {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  @keyframes waveEffectHero32 {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  @media (max-width: 768px) {
    .floating-elements, 
    .floating-wrapper,
    .emojisjoker-icon,
    .fichasdoradas-icon {
      height: 100vh;
    }
    
    .top-content {
      padding-top: 12vh;
    }
    
    .bottom-content {
      padding-bottom: 1vh;
      margin-bottom: 15vh; /* Adjusted for mobile */
    }
    
    .woman-container {
      height: 80vh; /* Still very large but adjusted for mobile proportions */
    }
    
    .mujer-y-celulares-icon {
      height: 80vh; /* Matching container height */
      object-position: bottom;
    }
    
    .teextranamos-icon {
      max-height: 12vh;
      margin-bottom: 1vh;
    }
    
    .superwin-icon {
      max-height: 12vh;
      margin-bottom: 1vh;
    }
    
    .logovegas-icon {
      max-height: 8vh;
    }

    /* Ajustes de animación para móvil */
    .boton-whatsapp-icon {
      animation-duration: 2.5s, 3.5s, 5s; /* Animaciones más suaves en móvil */
    }
    
    .emojisjoker-icon,
    .fichasdoradas-icon {
      animation-duration: 18s, 1.2s, 25s; /* Más lentas en móvil */
    }
  }

  /* Reducir animaciones para usuarios que prefieren menos movimiento */
  @media (prefers-reduced-motion: reduce) {
    .boton-whatsapp-icon {
      animation: pulseButtonHero32 4s ease-in-out infinite;
    }
    
    .emojisjoker-icon,
    .fichasdoradas-icon,
    .brillo-center-icon,
    .fondo-icon {
      animation: none;
    }
    
    .whatsapp-glow {
      animation: glowPulseHero32 3s ease-in-out infinite;
    }
  }
</style>

<script define:vars={{ pixelEvent }}>
  document.addEventListener('DOMContentLoaded', () => {
    // Para depuración
    console.log('Pixel event disponible:', pixelEvent);
    
    // Obtener los botones
    const whatsappBtn1 = document.getElementById('whatsapp-btn-1');
    const whatsappBtn2 = document.getElementById('whatsapp-btn-2');
    
    // Función para manejar el clic y enviar evento de Pixel
    const handleButtonClick = (e, btnElement) => {
      e.preventDefault();
      
      // Usar una variable local para el evento
      const eventToTrack = pixelEvent || 'Lead';
      
      // Imprimir para depuración
      console.log('Tracking event:', eventToTrack);
      
      // Enviar el evento si fbq está disponible
      if (typeof fbq === 'function') {
        fbq('track', eventToTrack);
      }
      
      // Navegar después de un pequeño retraso
      setTimeout(() => {
        window.location.href = btnElement.href;
      }, 300);
    };
    
    // Agregar event listeners a ambos botones
    if (whatsappBtn1) {
      whatsappBtn1.addEventListener('click', (e) => handleButtonClick(e, whatsappBtn1));
    }
    
    if (whatsappBtn2) {
      whatsappBtn2.addEventListener('click', (e) => handleButtonClick(e, whatsappBtn2));
    }
  });
</script>