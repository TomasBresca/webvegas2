              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ pixelEvent }}>
  document.addEventListener('DOMContentLoaded', () => {
    // Referencias a elementos del DOM
    const bonusModal = document.getElementById('bonus-modal');
    const modalCard = document.querySelector('.modal-card');
    const closeModalBtn = document.getElementById('close-modal');
    const mainWhatsappLink = document.querySelector('#modal-cta')?.getAttribute('href') || '';
    const claimButton = document.getElementById('claim-bonus');
    
    // Para depuración
    console.log('Inicializando componente de bono VIP mejorado...');
    console.log('Pixel event disponible:', pixelEvent);
    
    // Animación adicional para la ficha VIP
    const vipChip = document.querySelector('.vip-chip');
    let hoverEffect = false;
    
    if (vipChip) {
      // Añadir efecto de levitación
      setInterval(() => {
        if (!hoverEffect) {
          vipChip.style.transform = `translateY(${Math.sin(Date.now() / 1000) * 8}px) rotate(${Math.sin(Date.now() / 2000) * 3}deg)`;
        }
      }, 50);
      
      // Añadir efecto al pasar el mouse o tocar
      vipChip.addEventListener('mouseenter', activateChipHover);
      vipChip.addEventListener('touchstart', activateChipHover);
      
      vipChip.addEventListener('mouseleave', deactivateChipHover);
      vipChip.addEventListener('touchend', deactivateChipHover);
      
      function activateChipHover() {
        hoverEffect = true;
        vipChip.style.transform = 'translateY(-10px) scale(1.05)';
        vipChip.style.boxShadow = '0 25px 50px rgba(255, 215, 0, 0.4), 0 0 30px rgba(255, 215, 0, 0.3)';
        vipChip.classList.add('chip-hover');
      }
      
      function deactivateChipHover() {
        hoverEffect = false;
        vipChip.classList.remove('chip-hover');
        vipChip.style.boxShadow = '0 15px 35px rgba(255, 215, 0, 0.3), 0 0 20px rgba(255, 215, 0, 0.2)';
      }
      
      // Efecto de brillo aleatorio en la ficha
      setInterval(() => {
        const lightReflection = document.querySelector('.light-reflection');
        if (lightReflection) {
          const randomX = Math.floor(Math.random() * 100) - 50;
          const randomY = Math.floor(Math.random() * 100) - 50;
          
          lightReflection.style.left = `calc(50% + ${randomX}px)`;
          lightReflection.style.top = `calc(50% + ${randomY}px)`;
          lightReflection.style.opacity = '0';
          
          setTimeout(() => {
            lightReflection.style.opacity = '0.7';
            
            setTimeout(() => {
              lightReflection.style.opacity = '0';
            }, 500);
          }, 100);
        }
      }, 3000);
      
      // Animar destellos aleatorios
      const animateSparkles = () => {
        const sparkles = document.querySelectorAll('.sparkle');
        sparkles.forEach((sparkle, index) => {
          // Posición aleatoria alrededor de la ficha
          const angle = Math.random() * 360;
          const distance = 60 + Math.random() * 80;
          const x = Math.cos(angle * Math.PI / 180) * distance;
          const y = Math.sin(angle * Math.PI / 180) * distance;
          
          // Configurar el destello
          sparkle.style.left = `calc(50% + ${x}px)`;
          sparkle.style.top = `calc(50% + ${y}px)`;
          sparkle.style.opacity = '0';
          sparkle.style.transform = 'scale(0)';
          
          // Animación con retraso según el índice
          setTimeout(() => {
            sparkle.style.opacity = '1';
            sparkle.style.transform = 'scale(1)';
            
            setTimeout(() => {
              sparkle.style.opacity = '0';
              sparkle.style.transform = 'scale(0)';
            }, 600);
          }, 1000 + index * 800);
        });
        
        // Repetir la animación
        setTimeout(animateSparkles, 3000);
      };
      
      // Iniciar animación de destellos
      animateSparkles();
    }
    
    // Función para añadir efecto de confeti
    const addConfettiEffect = () => {
      const container = document.querySelector('.casino-chip-wrapper');
      if (!container) return;
      
      console.log('Añadiendo efecto de confeti...');
      
      for (let i = 0; i < 60; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti-piece';
        confetti.style.setProperty('--x', (Math.random() * 300 - 150) + 'px');
        confetti.style.setProperty('--y', (Math.random() * 300 - 150) + 'px');
        confetti.style.setProperty('--rotation', Math.random() * 360 + 'deg');
        confetti.style.setProperty('--size', Math.random() * 10 + 5 + 'px');
        
        // Más colores y variedad
        const colors = ['#FFD700', '#FF9900', '#FF0000', '#9900FF', '#0099FF', '#22cc77', '#ff44aa'];
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        
        container.appendChild(confetti);
        
        // Eliminar el confeti después de la animación
        setTimeout(() => {
          confetti.remove();
        }, 3000);
      }
    };
    
    // Configurar el botón de WhatsApp superior
    const topWhatsappButton = document.getElementById('whatsapp-top-button');
    if (topWhatsappButton) {
      topWhatsappButton.addEventListener('click', (e) => {
        // Prevenir navegación inmediata
        e.preventDefault();
        
        // Usar una variable local para el evento
        const eventToTrack = pixelEvent || 'Lead';
        
        // Imprimir para depuración
        console.log('Tracking event desde botón superior:', eventToTrack);
        
        // Enviar el evento si fbq está disponible
        if (typeof fbq === 'function') {
          fbq('track', eventToTrack);
        }
        
        // Navegar después de un pequeño retraso
        setTimeout(() => {
          window.open(topWhatsappButton.href, '_blank');
        }, 300);
      });
    }
    
    // Función para mostrar el modal con los detalles del bono
    function showBonusModal() {
      console.log('Mostrando modal del bono VIP 10%');
      
      // Actualizar link de CTA
      const ctaButton = document.getElementById('modal-cta');
      if (ctaButton) {
        ctaButton.href = mainWhatsappLink;
      }
      
      // Mostrar el modal con animación
      if (bonusModal) {
        bonusModal.classList.remove('opacity-0', 'pointer-events-none');
        setTimeout(() => {
          if (modalCard) modalCard.classList.add('scale-100');
        }, 100);
      }
      
      // Añadir efecto de confeti
      addConfettiEffect();
    }
    
    // Cerrar el modal
    function closeModal() {
      if (modalCard) modalCard.classList.remove('scale-100');
      
      setTimeout(() => {
        if (bonusModal) bonusModal.classList.add('opacity-0', 'pointer-events-none');
      }, 300);
    }
    
    // Obtener el botón CTA
    const ctaButton = document.getElementById('modal-cta');
    
    if (ctaButton) {
      ctaButton.addEventListener('click', (e) => {
        // Prevenir navegación inmediata
        e.preventDefault();
        
        // Usar una variable local para el evento
        const eventToTrack = pixelEvent || 'Lead';
        
        // Imprimir para depuración
        console.log('Tracking event:', eventToTrack);
        
        // Enviar el evento si fbq está disponible
        if (typeof fbq === 'function') {
          fbq('track', eventToTrack);
        }
        
        // Navegar después de un pequeño retraso
