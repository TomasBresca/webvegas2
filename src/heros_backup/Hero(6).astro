---
const { whatsappLink1, whatsappLink2 } = Astro.props;
import '../styles/global.css';
---
<section class="relative min-h-screen flex items-center bg-casino-purple overflow-hidden w-full pt-20 md:pt-24 pb-12 md:pb-16">
  <!-- Elementos flotantes decorativos -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="floating-element absolute top-1/4 left-10 w-12 h-12 opacity-30 animate-spin-slow">
      <img src="/images/chips.svg" alt="" class="w-full h-full" />
    </div>
    <div class="floating-element absolute top-2/3 right-12 w-16 h-16 opacity-20 animate-pulse-slow" style="animation-delay: 1s;">
      <img src="/images/ace.svg" alt="" class="w-full h-full" />
    </div>
    <div class="floating-element absolute bottom-1/4 left-1/3 w-14 h-14 opacity-25" style="animation-delay: 0.5s;">
      <img src="/images/gambling.svg" alt="" class="w-full h-full" />
    </div>
    <div class="floating-element absolute top-1/3 right-1/4 w-10 h-10 opacity-20" style="animation-delay: 1.5s;">
      <img src="/images/ace.svg" alt="" class="w-full h-full" />
    </div>
  </div>
  
  <div class="w-full px-6 md:px-10 max-w-7xl mx-auto relative z-10 py-8 md:py-10">
    <!-- Encabezado -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl lg:text-6xl text-white uppercase hero-title">
        <span class="gradient-text font-bold">VEGAS</span> VS <span class="text-white/60">COMPETENCIA</span>
      </h1>
      
      <h2 class="text-xl md:text-2xl lg:text-3xl font-accent text-white/80 mt-4 hero-subtitle">
        La diferencia es <span class="gradient-text font-bold">BRUTAL</span>
      </h2>
    </div>
    
    <!-- Tabla de comparación - Dos columnas, más agresiva -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 max-w-4xl mx-auto">
      <!-- Columna de la competencia -->
      <div class="card-comparison card-competition rounded-xl p-6 transition-all relative mt-6">
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-red-500 text-white px-4 py-1 rounded-full text-sm font-bold z-10">
          COMPETENCIA
        </div>
        
        <div class="text-center mb-6">
          <div class="bg-white/10 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-3">
            <img src="/images/chip-silver.svg" alt="Competencia" class="w-12 h-12 opacity-50" />
          </div>
          <h3 class="text-xl font-bold text-white/70">Plataforma X</h3>
          <p class="text-red-400 text-sm mt-1">¡Pura decepción!</p>
        </div>
        
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <span class="text-red-500 text-xl mt-0.5">✕</span>
            <div>
              <span class="text-white/70 font-medium">Registros interminables</span>
              <p class="text-white/50 text-sm">Más de 10 minutos perdidos en formularios</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-red-500 text-xl mt-0.5">✕</span>
            <div>
              <span class="text-white/70 font-medium">Retiros eternos</span>
              <p class="text-white/50 text-sm">Esperas de hasta 48 horas para ver TU dinero</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-red-500 text-xl mt-0.5">✕</span>
            <div>
              <span class="text-white/70 font-medium">Soporte inexistente</span>
              <p class="text-white/50 text-sm">¡Buena suerte consiguiendo ayuda cuando la necesites!</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-red-500 text-xl mt-0.5">✕</span>
            <div>
              <span class="text-white/70 font-medium">Bonos con letra chica</span>
              <p class="text-white/50 text-sm">Condiciones imposibles para retirar tus ganancias</p>
            </div>
          </li>
        </ul>
      </div>
      
      <!-- Columna - nuestra plataforma -->
      <div class="card-comparison card-vegas rounded-xl p-6 transform scale-105 shadow-2xl relative border-2 border-casino-gold mt-6">
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-casino-gold text-black px-6 py-1 rounded-full text-sm font-bold z-10">
          SUPERIOR
        </div>
        
        <div class="text-center mb-6">
          <div class="bg-casino-gold/20 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-3 glow-effect">
            <img src="/images/chip-gold.svg" alt="Vegas" class="w-16 h-16" />
          </div>
          <h3 class="text-2xl font-bold gradient-text">VEGAS</h3>
          <p class="text-casino-gold text-sm mt-1">¡La experiencia definitiva!</p>
        </div>
        
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <span class="text-casino-gold text-xl mt-0.5">✓</span>
            <div>
              <span class="text-white font-bold">Registro ultrarrápido</span>
              <p class="text-casino-gold font-medium">¡SOLO 3 SEGUNDOS y ya podés jugar!</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-casino-gold text-xl mt-0.5">✓</span>
            <div>
              <span class="text-white font-bold">Retiros instantáneos</span>
              <p class="text-casino-gold font-medium">Tu dinero, cuando VOS quieras</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-casino-gold text-xl mt-0.5">✓</span>
            <div>
              <span class="text-white font-bold">Soporte VIP 24/7</span>
              <p class="text-casino-gold font-medium">Siempre a tu servicio, sin excepciones</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-casino-gold text-xl mt-0.5">✓</span>
            <div>
              <span class="text-white font-bold">Bonos reales sin trucos</span>
              <p class="text-casino-gold font-medium">Lo que ves es lo que obtenés</p>
            </div>
          </li>
        </ul>
        
        <div class="mt-6">
          <div class="countdown-container bg-casino-purple-dark border border-casino-gold/70 rounded-lg py-2 px-4 w-full text-center">
            <span class="text-white uppercase font-bold text-sm">BONO EXPIRA EN:</span>
            <div class="countdown-timer inline-flex items-center ml-2">
              <span id="minutes" class="text-casino-gold text-lg font-bold">15</span>
              <span class="text-casino-gold text-lg font-bold">:</span>
              <span id="seconds" class="text-casino-gold text-lg font-bold">00</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Botones de acción -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-10 mb-6">
      <a href={whatsappLink1} target="_blank" rel="noopener" class="whatsapp-btn flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-8 rounded-lg transition-all hover:scale-105 shadow-lg w-full sm:w-auto">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline" fill="white" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        CREÁ TU CUENTA
      </a>
    </div>
  </div>
  
  <!-- Textura de fondo -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(255, 193, 7, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 193, 7, 0.1) 1px, transparent 1px);
    background-size: 25px 25px;
  }
  
  .card-comparison {
    background: linear-gradient(to bottom, rgba(40, 20, 70, 0.8), rgba(30, 15, 55, 0.8));
    backdrop-filter: blur(5px);
    transition: all 0.3s ease;
    overflow: visible;
  }
  
  .card-vegas {
    background: linear-gradient(to bottom, rgba(53, 11, 45, 0.95), rgba(30, 15, 55, 0.95));
    box-shadow: 0 0 20px rgba(255, 193, 7, 0.3);
  }
  
  .card-competition {
    position: relative;
    overflow: visible;
  }
  
  .card-competition::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  }
  
  .countdown-container {
    background: linear-gradient(to bottom, rgba(40, 20, 70, 0.9), rgba(30, 15, 55, 0.9));
  }
  
  .countdown-timer {
    position: relative;
    display: inline-flex !important;
  }
  
  .countdown-timer::before {
    content: '';
    position: absolute;
    inset: -0.5rem;
    background: linear-gradient(45deg, transparent, rgba(255, 193, 7, 0.2), transparent);
    border-radius: 0.5rem;
    z-index: -1;
    animation: pulse-glow 2s infinite;
  }
  
  .glow-effect {
    position: relative;
  }
  
  .glow-effect::after {
    content: '';
    position: absolute;
    inset: -5px;
    background: radial-gradient(circle, rgba(255, 193, 7, 0.4), transparent 70%);
    border-radius: 50%;
    z-index: -1;
    animation: pulse-glow 2s infinite;
  }
  
  @keyframes pulse-glow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.7; }
  }
  
  /* Estilos para responsive */
  @media (max-width: 768px) {
    .card-vegas {
      transform: scale(1.02);
      margin-top: 2rem;
    }
  }
</style>

<script>
  // Cuenta regresiva de 15 minutos
  let totalSeconds = 15 * 60;
  const minutesElement = document.getElementById('minutes');
  const secondsElement = document.getElementById('seconds');
  
  function updateTimer() {
    const minutes = Math.floor(totalSeconds / 60);
    const seconds = totalSeconds % 60;
    
    if (minutesElement) {
      minutesElement.textContent = minutes.toString().padStart(2, '0');
    }
    
    if (secondsElement) {
      secondsElement.textContent = seconds.toString().padStart(2, '0');
    }
    
    if (totalSeconds > 0) {
      totalSeconds--;
      setTimeout(updateTimer, 1000);
    } else {
      // Opcional: redirigir o mostrar mensaje cuando termine la cuenta regresiva
      const countdownContainer = document.querySelector('.countdown-container');
      if (countdownContainer) {
        countdownContainer.innerHTML = 
          '<div class="text-center w-full"><span class="text-white font-bold text-lg">¡BONO EXPIRADO!</span></div>';
      }
    }
  }
  
  // Iniciar la cuenta regresiva cuando se carga la página
  window.addEventListener('load', updateTimer);
</script>